# AWS 설정
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID

# DynamoDB 테이블 (배포 스크립트에서 자동 생성됨)
CONVERSATIONS_TABLE=YOUR_SERVICE_NAME-conversations-YOUR_INSTANCE
PROMPTS_TABLE=YOUR_SERVICE_NAME-prompts-YOUR_INSTANCE
USAGE_TABLE=YOUR_SERVICE_NAME-usage-YOUR_INSTANCE
WEBSOCKET_TABLE=YOUR_SERVICE_NAME-websocket-connections-YOUR_INSTANCE
CONNECTIONS_TABLE=YOUR_SERVICE_NAME-websocket-connections-YOUR_INSTANCE
FILES_TABLE=YOUR_SERVICE_NAME-files-YOUR_INSTANCE
MESSAGES_TABLE=YOUR_SERVICE_NAME-messages-YOUR_INSTANCE

# API Gateway (배포 후 업데이트 필요)
REST_API_URL=https://YOUR_REST_API_ID.execute-api.us-east-1.amazonaws.com/prod
WEBSOCKET_API_URL=wss://YOUR_WEBSOCKET_API_ID.execute-api.us-east-1.amazonaws.com/prod
WEBSOCKET_API_ID=YOUR_WEBSOCKET_API_ID
API_STAGE=prod

# Lambda 설정
LAMBDA_TIMEOUT=120
LAMBDA_MEMORY=1024
LOG_LEVEL=INFO

# Bedrock 설정
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0
BEDROCK_OPUS_MODEL_ID=us.anthropic.claude-opus-4-1-20250805-v1:0
