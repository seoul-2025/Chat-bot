# f1.sedaily.ai Production Environment Configuration
# Claude 4.5 Opus API 설정
# 최종 업데이트: 2024-11-30

# ========================================
# 환경 정보
# ========================================
ENV=production
SERVICE_NAME=f1.sedaily.ai
AWS_REGION=us-east-1

# ========================================
# Lambda Functions (f1-two stack)
# ========================================
LAMBDA_WS_MESSAGE=f1-websocket-message-two
LAMBDA_WS_CONNECT=f1-websocket-connect-two
LAMBDA_WS_DISCONNECT=f1-websocket-disconnect-two
LAMBDA_CONVERSATION=f1-conversation-api-two
LAMBDA_PROMPT=f1-prompt-crud-two
LAMBDA_USAGE=f1-usage-handler-two

# ========================================
# Anthropic API Configuration
# ========================================
USE_ANTHROPIC_API=true
ANTHROPIC_SECRET_NAME=foreign-v1
ANTHROPIC_MODEL_ID=claude-opus-4-5-20251101
AI_PROVIDER=anthropic_api
FALLBACK_TO_BEDROCK=true
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# ========================================
# Bedrock Configuration (Fallback)
# ========================================
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0
BEDROCK_MAX_TOKENS=16384
BEDROCK_TEMPERATURE=0.81

# ========================================
# Application Settings
# ========================================
LOG_LEVEL=INFO
CACHE_TTL=300